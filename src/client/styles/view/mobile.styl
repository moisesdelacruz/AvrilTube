section.home
  margin .5em auto
  background white
  padding .5em
  text-align center
.item
  text-align left
  cursor pointer
  display block
  width 100%
  height 5.7em
  margin-bottom 1em
  .image
    display inline-block
    float left
    margin 0 .5em 0 0
    margin-right 8
    img
      width 100%
      height 100%
  .title
    color azul
    &:hover
      text-decoration underline
  .channel
    color gris
    font-size .7em
    margin .5em 0
    &:hover
      text-decoration underline
  &:hover
    .channel
      color azul
