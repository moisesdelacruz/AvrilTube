section
  margin .5em
  background white
  padding .5em
  text-align center
  .item
    text-align left
    cursor pointer
    display block
    width 100%
    height 5.7em
    margin-bottom 1em
    .image
      display inline-block
      float left
      margin 0
      margin-right 8
      img
        width 100%
        height 100%
    .title
      color azul
    .channel
      color gris
      margin .5em 0
  .item:hover
    .title
      color azul
      text-decoration underline
