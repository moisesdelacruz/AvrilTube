body
  background gris_claro

header
  position relative
  border-bottom 1px solid gris_claro
  width 100%
  height 4em
  overflow hidden
  background rojo
  .logo
    position absolute
    top .5em
    left .3em
    margin 0
    width 3em
    display inline-block
    img
      width 100%
  .form
    padding .8em
    width calc( 100% - 4.5em)
    position absolute
    right 0
    input[type="search"]
      width calc(100% - 5.7em)
      height 2em
    input[type="submit"]
      width 5em
      border 1px solid gris
      height 2.4em
      margin-left -.3em
