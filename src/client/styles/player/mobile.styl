section.player
  position relative
  margin 0 auto
  max-width 1400px
.process
  display block
  width 100%
  margin 0 auto

  .video
    background black
    width 100%
    height 11.5em
    #video
      width 100%
      height 100%
  .data
    width calc(100% - 1em)
    background white
    padding .5em
    margin .5em 0

    h3#title
      font-size 1.2em
      color negro
      font-weight normal

    p
      color azul
      cursor pointer
      &:hover
        text-decoration underline
  .info
    background white
    padding .5em

    p.description
      font-size .9em
      color negro

    p.date
      font-weight bold

.recommended
    width calc(100% - 1em)
    background white
    padding 0 .5em
    margin 0 auto
    display block

  article.item
    width 100%
    margin .5em auto
    height 6em

    .image
      width 10em
      height 6em
